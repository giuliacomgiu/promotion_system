<div class="ls-box ls-board-box">
  <header class="ls-info-header">
    <div class="ls-list-title col-md-9">
      <h2 class="ls-title-3"><%= promotion.name %></h2>
    </div>
    <div class="col-md-3 ls-txt-right">
      <% if promotion.curator.present? %>
        <%= render partial: 'approved_interface', locals: { promotion: promotion } %>
      <% else %>
        <%= render partial: 'pending_interface', locals: { promotion: promotion } %>
      <% end %>
    </div>
  </header>
  <% if promotion.description.present? %>
    <div class="ls-info-header">
      <h5 class="ls-title-5"><%= Promotion.human_attribute_name('description') %></h5>
      <p><%= promotion.description %></p>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-6 col-md-2">
      <div class="ls-box">
        <div class="ls-box-head">
          <h4 class="ls-title-4"><%= Promotion.human_attribute_name('code') %></h4>
        </div>
        <div class="ls-box-body">
          <%= promotion.code %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-2">
      <div class="ls-box">
        <div class="ls-box-head">
          <h4 class="ls-title-4"><%= Promotion.human_attribute_name('coupon_quantity') %></h4>
        </div>
        <div class="ls-box-body">
          <strong><%= promotion.coupon_quantity %></strong>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-2">
      <div class="ls-box">
        <div class="ls-box-head">
          <h4 class="ls-title-4"><%= Promotion.human_attribute_name('discount_rate') %></h4>
        </div>
        <div class="ls-box-body">
          <strong><%= number_to_percentage promotion.discount_rate, precision: 2, separator: ',' %></strong>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-2">
      <div class="ls-box">
        <div class="ls-box-head">
          <h4 class="ls-title-4"><%= Promotion.human_attribute_name('maximum_discount') %></h4>
        </div>
        <div class="ls-box-body">
          <%= number_to_currency promotion.maximum_discount %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-2">
      <div class="ls-box">
        <div class="ls-box-head">
          <h4 class="ls-title-4"><%= Promotion.human_attribute_name('expiration_date') %></h4>
        </div>
        <div class="ls-box-body">
          <%= promotion.expiration_date.strftime('%d/%m/%Y') %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-2">
      <div class="ls-box">
        <div class="ls-box-head">
          <h4 class="ls-title-4"><%= Promotion.human_attribute_name('product_categories') %></h4>
        </div>
        <div class="ls-box-body">
          <%= promotion.product_categories.names %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h4><%= "#{t('.created_by')} #{promotion.creator.email}" %></h4>
  </div>
  <% if promotion.curator.present? %>
    <div class="col-md-6">
      <h4><%= "#{t('.approved_by')} #{promotion.curator.email}" %></h4>
    </div>
  <% else %>
    <div class="col-md-6">
      <h4><%= t('.pending') %></h4>
    </div>
  <% end %>
</div>
