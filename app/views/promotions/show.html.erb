<h3><%= @promotion.name %></h3>
<p><%= @promotion.description %></p>
<dl>
  <dt> <%= Promotion.human_attribute_name('discount_rate') %> </dt>
  <dd><%= number_to_percentage @promotion.discount_rate, precision: 2, separator: ',' %></dd>
  <dt> <%= Promotion.human_attribute_name('code') %> </dt>
  <dd><%= @promotion.code %></dd>
  <dt> <%= Promotion.human_attribute_name('expiration_date') %> </dt>
  <dd><%= @promotion.expiration_date.strftime('%d/%m/%Y') %></dd>
  <dt> <%= Promotion.human_attribute_name('coupon_quantity') %> </dt>
  <dd><%= @promotion.coupon_quantity %></dd>
</dl>

<%= link_to 'Editar', edit_promotion_path(@promotion) %>
<%= link_to 'Deletar', @promotion, method: :delete %>
<%= link_to 'Voltar', promotions_path %>

<% if(@promotion.coupons.empty? and @promotion.unexpired?) %>
  <%= link_to 'Emitir cupons', issue_coupons_promotion_path(@promotion), method: :post %>
<% else %>
  <h1><%= Coupon.model_name.human(count:2) %></h1>

  <%= render @promotion.coupons %>
<% end %>
