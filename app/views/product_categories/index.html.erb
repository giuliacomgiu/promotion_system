<dl>
  <% @product_categories.each do |product_category| %>
    <dt><%= product_category.code %></dt>
    <dd><%= link_to product_category.name, product_category %></dd>
  <% end %>
</dl>

<% if @product_categories.empty? %>
  <p><%= t('.no_record_found') %></p>
<% end %>

<%= link_to t('.new_category'), new_product_category_path %>
<%= link_to t(:back, scope: :interface), root_path %>