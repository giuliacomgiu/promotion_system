<% content_for :authentication do %>
  <div class="ls-login-parent">
    <div class="ls-login-inner">
      <div class="ls-login-container">
        <h2>Log in</h2>
        <div class="ls-login-box">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"ls-form ls-login-form") do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, "Senha" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Entrar", class: "ls-btn-primary ls-btn-block" %>
            </div>
          <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
